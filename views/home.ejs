<%- include('partials/header') -%>

<div class="container">
  <h1>Home</h1>
  <p><%= startContent %></p>

  <% posts.forEach(function(post){ %>
  <h1><%= post.title %></h1>
  <p>
    <%= post.content.substring(0, 100) + ' ...'%>
    <a href="posts/<%=post._id%>">Read More</a>
    <!-- ALWAYS REMEMBER TO PUT ONLY VARIABLES INSIDE THE FUNNY BRACKETS! -->
  </p>
  <% }) %>
</div>

